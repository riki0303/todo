.container
  %h2
    = @board.name
  .post
    - @tasks.each do |task|
      = link_to(board_task_path(id: task.id)) do
        .post__item
          - if task.eyecatch.present?
            .post__img-box
              = image_tag task.eyecatch, class: 'post__img'
          %h3.post__title
            = task.name
          %p.post__text
            = task.description
          = image_tag 'avatar-2', alt: 'tasksの投稿者画像', class: 'post__image'
  -if user_signed_in?
    .post
      = link_to('+ Add new card', new_board_task_path, class: 'post__new-link')